generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:oi8XIsShM8@localhost:5434/postgres?schema=public"
}

model PersonName {
  id       Int     @id @default(autoincrement())
  title    String?
  first    String
  middle   String?
  last     String
  suffix   String?
  nickname String?
}

model Person {
  id           String     @id @default(cuid())
  idPersonName Int
  name         PersonName @relation(fields: [idPersonName], references: [id])
  dob          DateTime
}

model PlayerMeasurable {
  id        Int     @id @default(autoincrement())
  height    Int?
  weight    Int?
  forty     Float?
  bench     Int?
  vertical  Float?
  broad     Float?
  shuttle   Float?
  cone      Float?
  armLength Float?
  handSize  Float?
  handed    String?
}

model Player {
  id            String           @id @default(cuid())
  idPerson      String
  idMeasurables Int
  idCollege     Int
  person        Person           @relation(fields: [idPerson], references: [id])
  measurable    PlayerMeasurable @relation(fields: [idMeasurables], references: [id])
  college       CollegeProgram   @relation(fields: [idCollege], references: [id])
  nflPlayerId   String
}

model CollegeProgram {
  id          Int    @id @default(autoincrement())
  name        String
  division    String
  conference  String
  yearFounded Int
}

model Coach {
  id       String @id @default(cuid())
  idPerson String
  person   Person @relation(fields: [idPerson], references: [id])
}

model Executive {
  id       String @id @default(cuid())
  idPerson String
  person   Person @relation(fields: [idPerson], references: [id])
}

model LatLng {
  id        Int   @id @default(autoincrement())
  latitude  Float
  longitude Float
}

model Address {
  id             String @id @default(cuid())
  streetAddress1 String
  streetAddress2 String
  city           String
  stateCode      String
  zipCode        String
  countryCode    String
}

model Location {
  id            Int     @id @default(autoincrement())
  idAddress     String
  idCoordinates Int
  address       Address @relation(fields: [idAddress], references: [id])
  latLtg        LatLng  @relation(fields: [idCoordinates], references: [id])
}

model Stadium {
  id         String   @id @default(cuid())
  idLocation Int
  capacity   Int
  name       String
  yearOpened Int
  location   Location @relation(fields: [idLocation], references: [id])
}
