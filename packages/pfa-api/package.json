{
  "name": "pfa-api",
  "private": true,
  "version": "1.0.0",
  "description": "The api gateway used for retrieving pro-football-analytics resources",
  "main": "dist/index.js",
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "clean": "trash dist",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "run-s build test:*",
    "test:lint": "tslint --project . && prettier \"src/**/*.ts\" --check",
    "test:unit": "nyc mocha -r ts-node/register src/**/*.{spec,test}.ts --recursive --exit",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\" \"test:unit -- --watch\" \"watch:node\" ",
    "watch:node": "nodemon ./dist/index.js",
    "start": "node ./dist/index.js"
  },
  "author": "Sean Costello <me@seancostello.io>",
  "license": "ISC",
  "dependencies": {
    "apollo-server": "^2.6.8",
    "apollo-server-express": "^2.6.8",
    "bluebird": "^3.5.5",
    "dataloader": "^1.4.0",
    "express": "^4.17.1",
    "graphql": "^14.4.2",
    "graphql-iso-date": "^3.6.1",
    "graphql-kafka-subscriptions": "https://github.com/scostello/graphql-kafka-subscriptions#refs/heads/node12support",
    "graphql-tools": "^4.0.5",
    "graphql-type-json": "^0.3.0",
    "knex": "^0.19.5",
    "lodash.merge": "^4.6.2",
    "node-rdkafka": "https://github.com/lrecknagel/node-rdkafka#refs/heads/node12Support",
    "npm-watch": "^0.6.0",
    "pg": "^7.11.0",
    "ramda": "^0.26.1",
    "rxjs": "^6.5.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/commit-analyzer": "^6.3.0",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/github": "^5.4.2",
    "@semantic-release/npm": "^5.1.13",
    "@semantic-release/release-notes-generator": "^7.3.0",
    "@types/chai": "^4.2.2",
    "@types/express": "^4.17.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.5",
    "@types/sinon": "^7.0.13",
    "@types/sinon-chai": "^3.2.3",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.21",
    "trash-cli": "^3.0.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-immutable": "^6.0.1",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.6.3"
  },
  "prettier": {
    "singleQuote": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.{spec,test}.js"
    ]
  }
}
