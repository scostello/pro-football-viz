{
  "name": "pfa-api",
  "private": true,
  "version": "0.1.0",
  "description": "The api gateway used for retrieving pro-football-analytics resources",
  "main": "server.js",
  "scripts": {
    "watch": "npm-watch restart",
    "restart": "npm run build && npm start",
    "build": "rm -rf lib/ && babel src/ -d lib/ && flow-copy-source src/ lib/",
    "start": "babel-node lib/",
    "test": "nyc mocha $NODE_DEBUG_OPTION --require @babel/register {src,test}/**/*.{spec,test}.js --recursive --exit",
    "flow": "flow",
    "flow-typed": "flow-typed"
  },
  "author": "Sean Costello <me@seancostello.io>",
  "license": "ISC",
  "watch": {
    "restart": {
      "patterns": [
        "src"
      ],
      "extensions": "js",
      "quiet": false,
      "legacyWatch": true,
      "delay": 1200,
      "runOnChangeOnly": false
    }
  },
  "dependencies": {
    "apollo-server": "^2.6.8",
    "apollo-server-express": "^2.6.8",
    "bluebird": "^3.5.5",
    "dataloader": "^1.4.0",
    "express": "^4.17.1",
    "graphql": "^14.4.2",
    "graphql-iso-date": "^3.6.1",
    "graphql-kafka-subscriptions": "https://github.com/scostello/graphql-kafka-subscriptions#refs/heads/node12support",
    "graphql-tools": "^4.0.5",
    "graphql-type-json": "^0.3.0",
    "knex": "^0.19.0",
    "lodash.merge": "^4.6.2",
    "node-rdkafka": "https://github.com/lrecknagel/node-rdkafka#refs/heads/node12Support",
    "npm-watch": "^0.6.0",
    "pg": "^7.11.0",
    "ramda": "^0.26.1",
    "rxjs": "^6.5.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@babel/node": "^7.5.0",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.4",
    "@babel/plugin-transform-destructuring": "^7.5.0",
    "@babel/plugin-transform-runtime": "^7.5.0",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-flow": "^7.0.0",
    "@babel/register": "^7.4.4",
    "@babel/runtime": "^7.5.4",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/commit-analyzer": "^6.3.0",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/github": "^5.4.2",
    "@semantic-release/npm": "^5.1.13",
    "@semantic-release/release-notes-generator": "^7.3.0",
    "babel-eslint": "^10.0.2",
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "chai": "^4.2.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-flowtype": "^3.11.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "flow-bin": "^0.102.0",
    "flow-copy-source": "^2.0.7",
    "flow-typed": "^2.5.2",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.21"
  }
}
